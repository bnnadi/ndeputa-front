<% layout('./layout/index.ejs') %>
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <div class="response"></div>
                <form>
                    <div class="form-group"><label for="login-form-username">Email address</label><input class="form-control" id="login-form-username" type="email" aria-describedby="emailHelp" placeholder="Enter email"></div>
                    <div class="form-group"><label for="login-form-password">Password</label><input class="form-control" id="login-form-password" type="password" placeholder="Password"></div>
                    <a id="login-form-submit" class="btn btn-primary btn-block" href="#">Login</a>
                </form>
                <div class="text-center"><a class="d-block small" href="/forgot-password">Forgot Password?</a></div>
            </div>
        </div>
    </div>